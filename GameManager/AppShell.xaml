<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GameManager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GameManager"
    xmlns:Pages="clr-namespace:GameManager.Views"
    Shell.NavBarIsVisible="True"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home"
             Icon="home_outline">
            <ShellContent Title="Home" ContentTemplate="{DataTemplate Pages:HomePage}" />
        </Tab>
        <Tab Title="Favorites"
             Icon="heart_outline">
            <ShellContent Title="Favorites" ContentTemplate="{DataTemplate Pages:FavoritesPage}" />
        </Tab>
        <Tab Title="News"
             Icon="message_text_outline">
            <ShellContent Title="News" ContentTemplate="{DataTemplate Pages:GamePage}" />
        </Tab>
        <Tab Title="Account"
             Icon="account_circle_outline">
            <ShellContent Title="Account" ContentTemplate="{DataTemplate Pages:MainPage}" />
        </Tab>
    </TabBar>

</Shell>
